# AI Affiliate Marketing Automation Server - Environment Variables
# Copy this file to .env and fill in your API keys and configuration

# Server Configuration
PORT=8000
NODE_ENV=production

# OpenAI Configuration (Primary AI Provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id

# Replicate Configuration (Video Generation)
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# Stability AI Configuration (Image Generation)
STABILITY_AI_API_KEY=sk-your-stability-ai-key-here

# Google/YouTube API Configuration
YOUTUBE_CLIENT_ID=your-youtube-client-id.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=https://your-app.koyeb.app/auth/youtube/callback

# Additional AI Providers (Optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
COHERE_API_KEY=your-cohere-api-key-here
ELEVEN_LABS_API_KEY=your-eleven-labs-key-here

# Affiliate Program Configuration
DEFAULT_AFFILIATE_TAG=your-affiliate-tag
CLICKBANK_AFFILIATE_ID=your-clickbank-id
AMAZON_ASSOCIATE_TAG=your-amazon-tag

# System Configuration
MAX_CONCURRENT_CAMPAIGNS=3
AUTO_CAMPAIGN_INTERVAL=180
VIDEO_QUALITY=720p
THUMBNAIL_SIZE=1280x720

# Security (Optional - for production)
JWT_SECRET=your-jwt-secret-for-auth
ADMIN_PASSWORD=your-admin-panel-password

# Database (Optional - for persistent storage)
# MONGODB_URI=mongodb://your-mongodb-connection-string
# REDIS_URL=redis://your-redis-connection-string

# Webhook URLs (Optional - for notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=true
LOG_LEVEL=info
